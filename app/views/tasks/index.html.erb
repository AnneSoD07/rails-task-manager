<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
      <li>
        <p><input type="checkbox" id="completed" name="completed">
        <%= link_to task.title, task_path(task) %></p>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Delete #{task.title}?" } %>
      </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_path %>
